datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Labour {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  labourName         String
  fatherName         String
  gender             String
  dob                String
  caste              String
  mobileNumber       String
  aadharNumber       String  @unique
  districtName       String
  residentialAddress String
  education          String
  labourType         String
  state              String
  bankName           String
  branchName         String
  accountName        String
  ifscCode           String
  accountNumber      String
  brokerCode         String  @unique @default("")
  isBroker           Boolean @default(false)
  referedBy          String
}

model Client {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  clientName         String
  fatherName         String
  companyName        String
  labourCategory     String
  mobileNumber       String
  emailId            String @unique
  residentialAddress String
  password           String
}

model Requests {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  comment  String
  name     String
  mobileNo String
  clientID String @db.ObjectId
}

model Admin {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String @unique
  password String
}
