datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Labour {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  labourName         String
  fatherName         String
  gender             String
  dob                String
  caste              String
  mobileNumber       String
  aadharNumber       String
  districtName       String
  residentialAddress String
  education          String
  workEfficiency     String
  state              String
  bankName           String
  branchName         String
  accountName        String
  ifscCode           String
  accountNumber      String
  brokerCode         String  @default("0")
  isBroker           Boolean @default(false)
  referedBy          String
}

model Client {
  id                 String @id @default(auto()) @map("_id") @db.ObjectId
  clientName         String
  fatherName         String
  companyName        String
  labourCategory     String
  mobileNumber       String
  emailId            String
  residentialAddress String
  password           String
}

model Requests {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  comment String
  postId  String @db.ObjectId
}
